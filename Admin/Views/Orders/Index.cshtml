@model List<Dictionary<string, object>>

@{
    ViewData["Title"] = "Orders Management";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h1 class="mb-4">Orders Management</h1>
    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success">@TempData["Message"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    <table class="table table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th>#</th>
                <th>Customer</th>
                <th>Email</th>
                <th>Total Amount</th>
                <th>Order Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                int index = 1;
                foreach (var order in Model)
                {
                    <tr>
                        <td>@index</td>
                        <td>@order["order_by_name"]</td>
                        <td>@order["order_by_email"]</td>
                        <td>@order["total_amount"]</td>
                        <td>
                            <form method="post" asp-action="UpdateStatus" asp-controller="Orders">
                                <input type="hidden" name="orderId" value="@order["id"]" />
                                <select name="newStatus" class="form-select form-select-sm">
                                    @foreach (var status in new[] { "placed", "confirmed", "on_delivery", "delivered" })
                                    {
                                        var isSelected = order.ContainsKey("order_status") &&
                                        order["order_status"]?.ToString() == status
                                        ? "selected"
                                        : string.Empty;

                                        <!option value="@status" @isSelected>@status.Replace("_", " ").ToUpper()</!option>
                                    }
                                </select>
                                <button type="submit" class="btn btn-sm btn-primary mt-2">Update</button>
                            </form>
                        </td>
                        <td>
                            <div class="d-flex">
                                <!-- View Details -->
                                <a asp-controller="Orders" asp-action="Edit" asp-route-id="@order["id"]" class="btn btn-sm btn-info me-2">
                                    View Details
                                </a>

                                <!-- Delete -->
                                <form method="post" asp-action="Delete" asp-controller="Orders" style="display:inline;">
                                    <input type="hidden" name="orderId" value="@order["id"]" />
                                    <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this order?');">
                                        Delete
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                    index++;
                }
            }
            else
            {
                <tr>
                    <td colspan="6" class="text-center">No orders found.</td>
                </tr>
            }
        </tbody>
    </table>
</div>