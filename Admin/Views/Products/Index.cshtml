@model List<Dictionary<string, object>>

@{
    ViewData["Title"] = "Products Management";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h1 class="mb-4">Products Management</h1>

    <a href="@Url.Action("Add", "Products")" class="btn btn-success mb-4">Add New Product</a>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success">
            @TempData["Message"]
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">
            @TempData["Error"]
        </div>
    }

    <table class="table table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th>#</th>
                <th>Product Name</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Category</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                int index = 1;
                foreach (var product in Model)
                {
                    <tr>
                        <td>@index</td>
                        <td>@product["p_name"]</td>
                        <td>@product["p_price"]</td>
                        <td>@product["p_quantity"]</td>
                        <td>@product["p_category"]</td>
                        <td>
                            <!-- Edit button -->
                            <a asp-controller="Products" asp-action="Edit" asp-route-id="@product["id"]" class="btn btn-warning btn-sm">Edit</a>

                            <!-- Form Delete with confirmation -->
                            <form method="post" asp-controller="Products" asp-action="Delete" asp-route-id="@product["id"]" style="display:inline;" onsubmit="return confirmDelete()">
                                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                            </form>
                        </td>
                    </tr>
                    index++;
                }
            }
            else
            {
                <tr>
                    <td colspan="6" class="text-center">No products found.</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script>
    // Confirm before deleting a product
    function confirmDelete() {
        return confirm('Are you sure you want to delete this product?');
    }
</script>